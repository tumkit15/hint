{
  "ava": {
    "failFast": false,
    "files": [
      "dist/tests/**/*.js"
    ],
    "timeout": "1m"
  },
  "bin": {
    "create-hint": "./dist/src/new-hint.js"
  },
  "description": "webhint's hint initializer package",
  "devDependencies": {
    "@types/node": "10.9.1",
    "ava": "^0.25.0",
    "cpx": "^1.5.0",
    "eslint": "^5.9.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-markdown": "^1.0.0-rc.0",
    "eslint-plugin-typescript": "0.13.0",
    "fork-ts-checker-webpack-plugin": "^0.4.14",
    "fs-extra": "^7.0.0",
    "handlebars": "^4.0.11",
    "hint": "^4.0.2",
    "inquirer": "^6.2.0",
    "markdownlint-cli": "^0.13.0",
    "mkdirp": "^0.5.1",
    "npm-link-check": "^2.0.0",
    "npm-run-all": "^4.1.2",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.2",
    "sinon": "^7.1.1",
    "ts-loader": "^5.3.0",
    "typescript": "^3.1.6",
    "typescript-eslint-parser": "21.0.0",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "dist/src"
  ],
  "homepage": "https://webhint.io/",
  "keywords": [
    "create",
    "hint",
    "webhint"
  ],
  "license": "Apache-2.0",
  "name": "create-hint",
  "nyc": {
    "extends": "../../.nycrc"
  },
  "repository": "webhintio/hint",
  "scripts": {
    "build": "npm run clean && npm-run-all build:*",
    "build-release": "npm run clean && npm run build:assets && webpack",
    "build:assets": "cpx \"./{src,tests}/**/{!(*.ts),.!(ts)}\" dist",
    "build:ts": "tsc -b",
    "clean": "rimraf dist",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint . --cache --ext js --ext md --ext ts --ignore-path ../../.eslintignore --report-unused-disable-directives",
    "lint:md": "markdownlint --ignore CHANGELOG.md *.md",
    "test": "npm run lint && npm run build && npm run test-only",
    "test-only": "nyc ava",
    "watch": "npm run build && npm-run-all --parallel -c watch:*",
    "watch:assets": "npm run build:assets -- -w --no-initial",
    "watch:test": "ava --watch",
    "watch:ts": "npm run build:ts -- --watch",
    "webpack": "webpack"
  },
  "version": "2.0.0"
}
